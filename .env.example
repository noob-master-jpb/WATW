# WATW Environment Configuration
# Copy this to .env and fill in your values

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# OpenAI Configuration (optional - for AI summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (optional - alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Drive Configuration
# Download credentials.json from Google Cloud Console
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# n8n Configuration
N8N_DB_PASSWORD=secure_database_password_here
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here
N8N_HOST=n8n.your-domain.com
N8N_WEBHOOK_URL=https://n8n.your-domain.com

# Google Sheets for Audit Log (optional)
AUDIT_SHEET_ID=your_google_sheets_id_for_audit_log

# Domain Configuration
DOMAIN=your-domain.com

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_flask_secret_key_here

# Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password_here
